root = true

[*.cs]
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
charset = utf-8

# Dotnet/roslyn kuralları (örnek kısa liste)
dotnet_diagnostic.IDE0005.severity = warning   # unused using
dotnet_diagnostic.IDE0060.severity = suggestion # unused parameters
dotnet_diagnostic.IDE0044.severity = warning   # readonly fields
